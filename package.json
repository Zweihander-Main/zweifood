{
	"name": "ZweiFood",
	"version": "1.2.0",
	"description": "ZweiFood - Front end web application which coalesces data from multiple sources in the pursuit of finding somewhere decent to eat.",
	"author": "ZweihÃ¤nder",
	"scripts": {
		"dev": "parcel src/index.html --out-dir build",
		"build": "rm -rf ./build && parcel build src/index.html --out-dir build",
		"devAll": "netlify dev",
		"buildServe": "npm run build && browser-sync start --s build",
		"prebuild": "cd .netlify/functions/apifetch && npm i",
		"postbuild": "cp ./static/* ./build/",
		"test": "jest"
	},
	"main": "index.html",
	"private": true,
	"license": "MIT",
	"eslintConfig": {
		"env": {
			"browser": true,
			"es6": true,
			"jest/globals": true
		},
		"parserOptions": {
			"project": [
				"tsconfig.json",
				"./src/**/tsconfig.json"
			],
			"ecmaVersion": 2019
		},
		"plugins": [
			"@typescript-eslint"
		],
		"extends": [
			"eslint:recommended",
			"plugin:@typescript-eslint/eslint-recommended",
			"plugin:@typescript-eslint/recommended",
			"plugin:@typescript-eslint/recommended-requiring-type-checking",
			"prettier",
			"prettier/@typescript-eslint"
		],
		"rules": {
			"quotes": [
				"error",
				"single"
			],
			"semi": [
				"error",
				"always"
			],
			"no-console": [
				"error",
				{
					"allow": [
						"warn",
						"error",
						"debug"
					]
				}
			],
			"no-mixed-spaces-and-tabs": [
				"error",
				"smart-tabs"
			]
		}
	},
	"prettier": {
		"singleQuote": true,
		"trailingComma": "es5",
		"tabWidth": 4,
		"useTabs": true,
		"arrowParens": "always"
	},
	"stylelint": {
		"extends": "stylelint-config-standard",
		"rules": {
			"indentation": "tab",
			"max-empty-lines": 2,
			"comment-whitespace-inside": null,
			"declaration-block-no-shorthand-property-overrides": true,
			"declaration-colon-newline-after": null,
			"no-descending-specificity": null
		}
	},
	"browserslist": [
		"> 0.2%",
		"Firefox ESR",
		"not dead"
	],
	"jest": {
		"transform": {
			"^.+\\.(ts|tsx)$": "ts-jest",
			".+\\.(css|styl|less|sass|scss|png|jpg|ttf|woff|woff2)$": "jest-transform-stub"
		},
		"coverageDirectory": "coverage",
		"roots": [
			"<rootDir>/src/"
		],
		"preset": "jest-puppeteer"
	},
	"dependencies": {
		"bootstrap": "^4.4.0",
		"css-element-queries": "^1.2.2",
		"font-awesome": "^4.7.0",
		"fuzzyset.js": "0.0.8",
		"jquery": "^3.4.1",
		"jquery-migrate": "^3.1.0",
		"jquery-ui": "^1.13.2",
		"jquery.rateit": "^1.1.3",
		"knockout": "^3.5.1",
		"owp.glyphicons": "^1.1.0",
		"perfect-scrollbar": "^1.4.0",
		"respond.js": "^1.4.2",
		"slidebars": "^2.0.2",
		"webfontloader": "^1.6.28"
	},
	"devDependencies": {
		"@types/bootstrap": "^4.3.1",
		"@types/expect-puppeteer": "^3.3.3",
		"@types/googlemaps": "^3.38.1",
		"@types/jest": "^24.0.23",
		"@types/jest-environment-puppeteer": "^4.3.1",
		"@types/jquery": "^3.3.31",
		"@types/jquery.rateit": "^1.1.1",
		"@types/jqueryui": "^1.12.9",
		"@types/knockout": "^3.4.66",
		"@types/puppeteer": "^2.0.0",
		"@typescript-eslint/eslint-plugin": "^2.9.0",
		"@typescript-eslint/parser": "^2.9.0",
		"browser-sync": "^2.27.10",
		"eslint": "^6.7.1",
		"eslint-config-prettier": "^6.7.0",
		"eslint-plugin-jest": "^23.1.1",
		"eslint-plugin-prettier": "^3.1.1",
		"jest": "^24.9.0",
		"jest-puppeteer": "^4.3.0",
		"jest-transform-stub": "^2.0.0",
		"netlify-cli": "^2.21.0",
		"parcel-bundler": "^1.12.4",
		"prettier": "^1.19.1",
		"puppeteer": "^2.0.0",
		"ts-jest": "^24.2.0",
		"typescript": "^3.7.2"
	}
}
